<!--Exported by JBuilder on 14.07.2005 14:07:33-->
<!--It is RECOMMENDED that JBuilder builds and Ant builds done with
this exported Ant file be kept separate and be written to different
directories. For example, the JBuilder output directory might be "classes"
and the Ant output directory might be "classes.ant".-->
<project basedir="." default="rebuild" name="Client.jpx">
  <property name="jbuilder.home" value="C:/JBuilderX"/>
  <property name="jdk.home" value="${jbuilder.home}/jdk1.4"/>
  <property name="dest" value="classes.ant"/>
  <property name="Generated.Source" value="${dest}/Temporary_Files"/>
  <property name="xml_rpc_client.home" value="lib"/>
  <property name="src" value="src"/>
  <path id="project.class.path">
    <pathelement location="${dest}"/>
    <pathelement location="${xml_rpc_client.home}/AbsoluteLayout.jar"/>
    <pathelement location="${xml_rpc_client.home}/commons-codec-1.3.jar"/>
    <pathelement location="${xml_rpc_client.home}/junit.jar"/>
    <pathelement location="${xml_rpc_client.home}/src.jar"/>
    <pathelement location="${xml_rpc_client.home}/xmlrpc-2.0.jar"/>
  </path>
<!-- JUnit -->
	<property name="junit.dist.home" value="${env.JUNIT_HOME}"/>
	<property name="junit.stylesheets.source" value="${ant.dist.home}/etc"/>
	<property name="junit.reports.destination" value="${docs.home}/junit"/>

  <!--Patternset to exclude files from the output directory:-->
  <patternset id="dest.exclude">
    <exclude name="Temporary_Files/"/>
    <exclude name="Generated Source/"/>
    <exclude name="package cache/"/>
    <exclude name="dependency cache/"/>
    <exclude name="jsp cache/"/>
  </patternset>
  <target depends="init" name="javacompile">
    <javac bootclasspathref="project.class.path" debug="true" deprecation="true" destdir="${dest}" nowarn="false" target="1.2">
      <src path="${src}"/>
      <src path="${Generated.Source}"/>
    </javac>
  </target>

<!-- JUnit 3.8.1 compatible -->
	<target name="test" description="Run Unit Tests" depends="compile">
		<mkdir dir="${junit.reports.destination}"/>
		<!-- Do NEVER EVER SET THE fork ATTRIBUTE TO "false". 
		     THIS WILL BREAK THE BUILD! EEEEEEVIL! -->
		<junit fork="true" printsummary="true" filtertrace="true">
			<jvmarg value="-Dorg.netbeans.mdr.persistence.Dir=${mdr.storage.location}"/>
			<jvmarg value="-Dorg.netbeans.lib.jmi.Logger.fileName=${mdr.logfile}"/>
			<jvmarg value="-Dde.tuberlin.cs.cis.eve.properties=${configuration.properties}"/>
			<classpath refid="project.class.path"/>
			<batchtest todir="${junit.reports.destination}">
				<fileset dir="${src.home}">
					<include name="**/*Test*.java"/>
				</fileset>
			</batchtest>
			<formatter type="xml"/>
		</junit>
		<junitreport>
			<fileset dir="${junit.reports.destination}">
				<include name="TEST-*.xml"/>
			</fileset>
			<report format="frames" todir="${junit.reports.destination}/html"/>
		</junitreport>
		<delete file="${basedir}/TESTS-TestSuites.xml"/>
	</target>

  <target name="resource">
    <copy todir="${dest}">
      <fileset dir="${src}">
        <include name="**/*.jpe"/>
        <include name="**/*.jpeg"/>
        <include name="**/*.rmf"/>
        <include name="**/*.wav"/>
        <include name="**/*.mid"/>
        <include name="**/*.midi"/>
        <include name="**/*.au"/>
        <include name="**/*.gif"/>
        <include name="**/*.png"/>
        <include name="**/*.jpg"/>
        <include name="**/*.aiff"/>
        <include name="**/*.properties"/>
      </fileset>
    </copy>
  </target>
  <target name="javadoc"/>
  <target depends="cleanup" name="clean"/>
  <target name="precompile"/>
  <target depends="javacompile" name="compile"/>
  <target name="postcompile"/>
  <target depends="javadoc,resource" name="package"/>
  <target name="deploy"/>
  <target depends="precompile,compile,postcompile,package,deploy" name="make"/>
  <target depends="clean,make" name="rebuild"/>
  <target name="cleanup">
    <delete failonerror="false" includeemptydirs="true">
      <fileset dir="${dest}"/>
    </delete>
  </target>
  <target name="init">
    <mkdir dir="${dest}"/>
    <mkdir dir="${Generated.Source}"/>
  </target>
</project>
